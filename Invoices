    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        Invoice i1 = new Invoice();
        
        i1.setPreco(Double.parseDouble(jTextField4.getText()));
        
        i1.setQuantidade(Integer.parseInt(jTextField3.getText()));
        
        JOptionPane.showMessageDialog(null, "O valor da fatura é: " + i1.getInvoiceAmount());
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        Invoice i1 = new Invoice();
        
        i1.setNumero(jTextField1.getText());
        
        i1.setDescricao(jTextField2.getText());
        
        i1.setPreco(Double.parseDouble(jTextField4.getText()));
        
        i1.setQuantidade(Integer.parseInt(jTextField3.getText()));
        
        JOptionPane.showMessageDialog(null, "Número do produto: " + i1.getNumero() + 
                "\n" + "Descrição do produto: " + i1.getDescricao() + 
                "\n" + "Quantidade do produto: " + i1.getQuantidade() + 
                "\n" + "Preço do produto: " + i1.getPreco());
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        if(JOptionPane.showConfirmDialog(null, "Deseja Sair" + JOptionPane.YES_NO_OPTION)==0)
        {
            System.exit(0);
        }
    }                                        

