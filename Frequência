package newpackage;


public class NewClass {
    
    private String nome;
    private String sobrenome;
    private int dia;
    private int mes;
    private int ano;
    
    public NewClass(String n, String s, int d, int m, int a)
    {
        this.nome = n;
        this.sobrenome = s;
        this.dia = d;
        this.mes = m;
        this.ano = a;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getSobrenome() {
        return sobrenome;
    }

    public void setSobrenome(String sobrenome) {
        this.sobrenome = sobrenome;
    }

    public String getDia() {
        
        if(this.dia <= 0)
            return "";
        
        return dia + "";
    }

    public void setDia(int dia) {
        this.dia = dia;
    }

    public String getMes() {
        
        if(this.mes <= 0)
            return "";
        else if(this.mes > 0 && this.mes < 10)
            return "0" + this.mes;
        
        return mes + "";
    }

    public void setMes(int mes) {
        this.mes = mes;
    }

    public String getAno() {
        
        if(this.ano <= 0)
            return "";
        
        return ano + "";
    }

    public void setAno(int ano) {
        this.ano = ano;
    }
    public int heartRates()
    {
        if(this.ano <= 0)
            return 0;
        
        return 220 - (2023 - this.ano);
    }
    public String heartRates2()
    {
        if(this.ano < 0)
            return "0";
        
        return "Entre " + ((220 - (2023 - this.ano))*0.5) + " e " + ((220 - (2023 - this.ano))*0.85);
    }
    public Boolean testData(int d, int m, int a)
    {
        this.dia = d;
        this.mes = m;
        this.ano = a;
        
        if(d >= 1 && m >= 1 && a >= 1)
            return true;
        else
            return false;
    }
}

