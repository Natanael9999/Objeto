    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        NewClass n1 = new NewClass("","",0,0,0);
        
        if(day.getText().length() > 0 && mouth.getText().length() > 0 && year.getText().length() > 0 && nome.getText().length() > 0 && sobrenome.getText().length() > 0)
        {
            n1.setDia(Integer.parseInt(day.getText()));
        
            n1.setMes(Integer.parseInt(mouth.getText()));
        
            n1.setAno(Integer.parseInt(year.getText()));
        
            n1.setNome(nome.getText());
        
            n1.setSobrenome(sobrenome.getText());
            
            if(n1.testData(Integer.parseInt(day.getText()), Integer.parseInt(mouth.getText()), Integer.parseInt(year.getText())) == false)
            {
                JOptionPane.showMessageDialog(null, "Verifique os seus dados");
            }
            else
            {
                JOptionPane.showMessageDialog(null, "Data de nascimento: " + n1.getDia() + "/" + n1.getMes() + "/" + n1.getAno() + "\n" + 
                "Nome e sobrenome: " +  n1.getNome() + " " + n1.getSobrenome() + "\n" + "Frequência cardíaca máxima: " + n1.heartRates() + "\n" + "Frequência cardíaca alvo: " + n1.heartRates2());
            }
        }
        else
        {
            JOptionPane.showMessageDialog(null, "Verifique os seus dados");
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        if(JOptionPane.showConfirmDialog(null, "Deseja Sair" + JOptionPane.YES_NO_OPTION)==0)
        {
            System.exit(0);
        }
    }                                        

